export BASHDIR=~/Dropbox/dotfiles

source ~/.bash/basic
source ~/.bash/completions
source ~/.bash/paths
source ~/.bash/prompt

for file in `ls $BASHDIR/**/*.bash` ; do
  . $file
done

if [ -f ~/.localrc ]; then
  . ~/.localrc
fi

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
